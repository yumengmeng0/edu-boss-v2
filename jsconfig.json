{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "commonjs",
    "target": "es2015",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}